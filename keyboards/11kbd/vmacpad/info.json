{
    "manufacturer": "11kbd",
    "keyboard_name": "vmacpad",
    "maintainer": "git:max3-2",
    "url": "https://github.com/max3-2/vmacpad",

    "usb": {
        "device_version": "0.5.0",
        "pid": "0x00A2",
        "vid": "0xFFFF"
    },

    "diode_direction": "COL2ROW",
    "processor": "STM32F401",
    "bootloader": "stm32-dfu",
    "matrix_pins": {
        "cols": ["A4", "A5", "A6", "A7", "D2"],
        "rows": ["C12", "C11", "C10", "B12"]
    },

    "features": {
        "bootmagic": true,
        "command": false,
        "console": false,
        "extrakey": true,
        "mousekey": false,
        "nkro": true,
        "via": false,
        "rgb_matrix": true
    },

    "encoder": {
        "enabled": true,
        "rotary": [
            {"pin_a": "C0", "pin_b": "C1"}
        ]
    },

    "bootmagic": {
        "enabled": true,
        "matrix": [0, 0]
    },

    "ws2812": {
        "pin": "B15",
        "driver": "pwm"
    },

    "rgb_matrix": {
        "enabled": true,
        "driver": "WS2812",
        "max_brightness": 220,
        "timeout": 600,
        "hue_steps": 12,
        "sat_steps": 12,
        "val_steps": 12,
        "speed_steps": 12,
        "layout": [
            { "matrix": [0, 0], "x": 18, "y": 13, "flags": 4 },
            { "matrix": [1, 0], "x": 18, "y": 26, "flags": 4 },
            { "matrix": [2, 2], "x": 18, "y": 39, "flags": 4 },
            { "matrix": [3, 0], "x": 18, "y": 52, "flags": 4 },

            { "matrix": [0, 1], "x": 100, "y": 6, "flags": 2 },
            { "matrix": [0, 3], "x": 170, "y": 6, "flags": 2 }
        ]
    },

    "layouts": {
        "LAYOUT": {
            "layout": [
                { "matrix": [0, 0], "x": 1.5, "y": 0 },
                { "matrix": [0, 1], "x": 2.75, "y": 0.25 },
                { "matrix": [0, 2], "x": 3.75, "y": 0.25 },
                { "matrix": [0, 3], "x": 4.75, "y": 0.25 },
                { "matrix": [0, 4], "x": 6, "y": 0 },

                { "matrix": [1, 0], "x": 1.75, "y": 1.25 },
                { "matrix": [1, 1], "x": 2.75, "y": 1.25 },
                { "matrix": [1, 2], "x": 3.75, "y": 1.25 },
                { "matrix": [1, 3], "x": 4.75, "y": 1.25 },
                { "matrix": [1, 4], "x": 5.75, "y": 1.25 },

                { "matrix": [2, 2], "x": 2.75, "y": 2.5, "w": 2.75, "h": 2.75},

                { "matrix": [3, 0], "x": 0, "y": 5.5 },
                { "matrix": [3, 1], "x": 1.25, "y": 5.5 },
                { "matrix": [3, 2], "x": 2.25, "y": 5.5, "w": 2.25 },
                { "matrix": [3, 3], "x": 4.5, "y": 5.5 },
                { "matrix": [3, 4], "x": 5.75, "y": 5.5 }
            ]
        }
    },

    "build": {
        "lto": true
    }
}
